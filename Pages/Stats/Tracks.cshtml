@page
@model spoti_stats.Pages.Stats.TracksModel
@{
}
<div class="container-sm">
    <div class="container text-center">
        <div class="row align-items-start">


            @foreach (var item in Model.top_tracks.Items)
            {
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <img src="@item.Album.Images.FirstOrDefault().Url" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>