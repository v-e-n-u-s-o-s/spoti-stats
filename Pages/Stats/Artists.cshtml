@page
@model spoti_stats.Pages.Stats.ArtistsModel
@{
    Layout = "_LoggedLayout";
    ViewBag.Title = "Top artists";
}
<div class="container-sm">
    <div class="container text-center">
        <div class="row align-items-start">


            @foreach (var item in Model.top_artists.Items)
            {
                <div class="col">

                    <div class="card" style="width: 18rem;">
                        <img src="@item.Images.FirstOrDefault().Url" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p>@item.Type</p>
                        </div>
                    </div>

                </div>
            }

        </div>
    </div>
</div>